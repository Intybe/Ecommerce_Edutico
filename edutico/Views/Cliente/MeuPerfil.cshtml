@{
    ViewData["Title"] = "Meu Perfil";
}
@model edutico.Models.Cliente;

<section class="meuperfil">
    <div class="Perfil position-relative">

        <div class="MinhaConta d-flex flex-column align-items-center py-4">
            <div class="MenuLateral w-100">

                <p class="Botoes align-items-center">
                    <!-- Alinhei ícones e texto -->
                    Minha Conta
                </p>

                <p class="Botoes align-items-center">
                    <a asp-controller="Home" asp-action="ProdutosF">
                        <img src="~/imgs/PerfilF.png" alt="Perfil" class="icon me-3">
                        Meu Perfil
                    </a>
                </p>


                <p class="Botoes align-items-center">
                    <a asp-controller="Home" asp-action="PedidosAndamentoF">
                        <img src="~/imgs/Pedidos.png" alt="Pedidos" class="icon me-3">
                        Meus Pedidos
                    </a>
                </p>

                <p class="Botoes align-items-center  @((ViewContext.RouteData.Values["action"] as string) == "ProdutosF" ? "active" : "")">
                    <a asp-controller="Home" asp-action="PedidosAndamentoF">
                        <img src="~/imgs/favoritos.png" alt="favoritos" class="icon me-3">
                        Meus Favoritos
                    </a>
                </p>

                <p class="Botoes align-items-center">
                    <a asp-controller="Home" asp-action="PedidosAndamentoF">
                        <img src="~/imgs/cartoes.png" alt="Cartoes" class="icon me-3">
                        Meus Cartões
                    </a>
                </p>

                <p class="Botoes align-items-center">
                    <a asp-controller="Home" asp-action="PedidosAndamentoF">
                        <img src="~/imgs/sair.png" alt="Logout" class="icon me-3">
                        Sair
                    </a>
                </p>

            </div>
        </div>
        <div class="position-absolute bottom-0 start-0 imgCataventos">
            <img src="~/imgs/cataventos.png" alt="cataventos">
        </div>

        <div class="col-9 areaCliente">

            <p class="titulo_perfil">MEU PERFIL</p>

            <div class="sub_perfil">
                <h5 id="glacial-bold">Dados Conta</h5>
                <!--botao que recebe quais campos irao ser modificados de acordo com id-->
                <button onclick="edicao(this,['email', 'senha'])" class="editar">Modificar</button>
            </div>
            <hr />
            <div class="col-3">
                <div class="info-grup">
                    <p>E-mail</p>
                    <input type="email" id="email" value="email@gmail.com" disabled>
                </div>
                <div class="info-grup">
                    <p>Senha</p>
                    <input id="senha" value="senhasecreta" disabled>
                </div>
            </div>


            <div class="sub_perfil">
                <h5 id="glacial-bold">Dados Pessoais</h5>
                <button onclick="edicao(this,['nomeprimeiro', 'tel', 'sombrenome', 'cpf'])" class="editar">Modificar</button>
            </div>
            <hr />
            <div class="d-flex">
                <div class="col-3">
                    <div class="info-grup">
                        <p>Primeiro Nome</p>
                        <input id="nomeprimeiro" value="Fulamnin" disabled>
                    </div>
                    <div class="info-grup">
                        <p>Telefone</p>
                        <input id="tel" value="(11)00000-0222" disabled>
                    </div>
                </div>
                <div class="col-3">
                    <div class="info-grup">
                        <p>Ultimo Nome</p>
                        <input id="sombrenome" value="Silvinha" disabled>
                    </div>
                    <div class="info-grup">
                        <p>CPF</p>
                        <input id="cpf" value="123.456.789.10" disabled>
                    </div>
                </div>
            </div>


            <div class="sub_perfil">
                <h5 id="glacial-bold">Endereço</h5>
                <button onclick="edicao(this,['logradouro', 'cep', 'bairro', 'cidade','num', 'uf'])" class="editar">Modificar</button>
            </div>
            <hr />
            <div class="d-flex">
                <div class="col-3">
                    <div class="info-grup">
                        <p>Logradouro</p>
                        <input id="logradouro" value="Rua dos que não acham" disabled>
                    </div>
                    <div class="info-grup">
                        <p>CEP</p>
                        <input id="cep" value="00000-090" disabled>
                    </div>
                </div>
                <div class="col-3">
                    <div class="info-grup">
                        <p>Bairro</p>
                        <input id="bairro" value="Morro Doce" disabled>
                    </div>
                    <div class="info-grup">
                        <p>Cidade</p>
                        <input id="cidade" value="Fim do Mundo" disabled>
                    </div>

                </div>
                <div class="col-3">
                    <div class="info-grup">
                        <p>Nº Residência</p>
                        <input id="num" value="123" disabled>
                    </div>
                    <div class="info-grup">
                        <p>UF</p>
                        <input id="uf" value="FM" class="info-perfil" disabled>
                    </div>

                </div>
            </div>
        </div>
    </div>


</section>








