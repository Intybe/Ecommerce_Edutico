@{
    Layout = "_LayoutCli2";
    ViewData["Title"] = "Finalizar Pedido";
}


<div class="row texto-simples">
    <div class="col-8">
        <!--seção do cliente-->
        <div class="base-cartao-com ">
            <div class="sub_perfil">
                <h5 id="glacial-bold">Dados do cliente</h5>
            </div>
            <hr />
            <div class="d-flex">
                <div class="col-3">
                    <div class="info-ped">
