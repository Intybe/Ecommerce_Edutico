                        <label><input type="radio" name="categoria"> quebra-cabeça</label>
                        <label><input type="radio" name="categoria"> jogoo</label>
                    </div>
                    <div class="filter-section2">
                        <h3>Avaliação</h3>
                        <label><input type="radio" name="avaliacao" checked> 5 Estrelas</label>
                        <label><input type="radio" name="avaliacao"> 4 Estrelas</label>
                        <label><input type="radio" name="avaliacao"> 3 Estrelas</label>
                        <label><input type="radio" name="avaliacao"> 2 Estrelas</label>
                        <label><input type="radio" name="avaliacao"> 1 Estrelas</label>
                    </div>
                </div>
            </div>
        </div>




    </section>
</section>