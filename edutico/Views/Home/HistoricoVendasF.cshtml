                        <td><a asp-controller="Home" asp-action="DetalhesPedidoF">Detalhes</a></td>
                    </tr>

                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-4">
                <div class="filter-section1">
                    <h2>FILTROS</h2>

                    <div class="filter-section2">
                        <h3>Categoria</h3>
                        <label><input type="radio" name="categoria" checked> jogo</label>
                        <label><input type="radio" name="categoria"> quebra-cabeça</label>
                        <label><input type="radio" name="categoria"> jogoo</label>
                        <label><input type="radio" name="categoria"> quebra-cabeça</label>
